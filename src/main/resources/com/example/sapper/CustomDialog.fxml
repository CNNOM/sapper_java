<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="customDialog" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" spacing="10" alignment="CENTER">
    <Label text="Строки:"/>
    <TextField fx:id="rowsField" promptText="Строки"/>
    <Label text="Столбцы:"/>
    <TextField fx:id="colsField" promptText="Столбцы"/>
    <Label text="Мины:"/>
    <TextField fx:id="minesField" promptText="Мины"/>
    <Button fx:id="okButton" text="OK"/>
    <Button text="CANCEL"/>
</VBox>